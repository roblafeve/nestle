// Grid
.grid
  vertical-align top
  border-spacing 0

  // Layout
  &.auto
    table-layout fixed
  &.inline
    display inline-block

  // Vertical Alignment
  &.align-top // default
    vertical-align top
  &.align-middle
    vertical-align middle
  &.align-bottom
    vertical-align bottom

  // Dimensions
  &.height-full
    height 100%

  // Variants
  &.wrapped
    border-spacing 0
    margin 0

    & > .grid-items
      display block
      width auto
      font-size 0

      & > *
        font-size 1rem
        display inline-block
        margin 0
        height auto

// All children of `.grid` inherit vertical alignment
$vertical-align
  vertical-align inherit

// Grid Items
.grid-items
  display table
  table-layout inherit
  border-spacing inherit
  @extend $vertical-align
  width 100%
  height 100%

// Column
.col
  display table-cell
  @extend $vertical-align

  &.height-max
    height 100%
  &.max
    width 100%
  &.min
    width 0.00001px

// Rows
.rows
  display table-row-group
  @extend $vertical-align

// Row
.row
  display table-row
  @extend $vertical-align

  &.max
    height 100%
  &.min
    height 0.00001px